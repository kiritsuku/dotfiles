#!/bin/sh
#
# fluxbox startup-script:

# Change your keymap:
#setxkbmap -layout de,de -variant neo,basic -option -option grp:sclk_toggle -option grp_led:scroll
setxkbmap de neo

# Applications you want to run with fluxbox.
# MAKE SURE THAT APPS THAT KEEP RUNNING HAVE AN ''&'' AT THE END.
#
export GDK_NATIVE_WINDOWS=true

exec pulseaudio --start &
exec ~/.screenlayout/screens.sh &
exec /usr/bin/tilda &
exec ~/.fehbg &
exec qbittorrent &
sleep 1 && exec /usr/bin/conky &
exec /usr/bin/tint2 &
exec dropbox &
exec ~/bin/xflux -l 49.0 -g 8.4 &

# And last but not least we start fluxbox.
# Because it is the last app you have to run it with ''exec'' before it.
exec fluxbox
# or if you want to keep a log:
# exec fluxbox -log "/home/antoras/.fluxbox/log"
